<dr:ContentDrawing x:Class="RecommendedExtensions.Core.Drawings.ComponentDrawing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:dr="clr-namespace:MEFEditor.Drawing;assembly=MEFEditor.Drawing"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
                   
             MinHeight="150"
             MinWidth="150"
            
             Background="LightBlue"
             BorderBrush="DarkBlue"
             BorderThickness="2"  
             CornerRadius="10"
                   
                   >
    <DockPanel Margin="10">
        <TextBlock DockPanel.Dock="Top" Name="TypeName" HorizontalAlignment="Center" FontSize="20">No name</TextBlock>
        <TextBlock Name="InstanceID" DockPanel.Dock="Top" FontStyle="Italic" HorizontalAlignment="Center">No id specified</TextBlock>

        <StackPanel Name="Properties" DockPanel.Dock="Top" Margin="0 10"></StackPanel>

        <Image Name="RemoveIcon" DockPanel.Dock="Left" HorizontalAlignment="Left" Width="32" Height="32"></Image>
        <Image Name="ComponentIcon" DockPanel.Dock="Bottom" HorizontalAlignment="Right"  Width="85" Height="51" Margin="10 0"></Image>
        
    </DockPanel>
</dr:ContentDrawing>
